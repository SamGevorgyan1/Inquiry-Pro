<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentStart"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentEnd"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_24dp" />


    <View
        android:id="@+id/background_purple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_background_light_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleQuizzesCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/tvTitleUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_40dp"
        android:text="Hi, Samvel Gevorgyan"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/contentStart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTextSeeAgain"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5dp"
        android:text="Delighted to see you again!"
        app:layout_constraintStart_toStartOf="@id/tvTitleUserName"
        app:layout_constraintTop_toBottomOf="@id/tvTitleUserName" />


    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@drawable/ic_search"
        android:backgroundTint="@color/textColor"
        app:layout_constraintBottom_toBottomOf="@id/tvTextSeeAgain"
        app:layout_constraintEnd_toStartOf="@+id/btnBell"
        app:layout_constraintTop_toTopOf="@id/tvTitleUserName" />


    <ImageButton
        android:id="@+id/btnBell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textColor"
        android:background="@drawable/ic_bell"
        app:layout_constraintBottom_toBottomOf="@id/tvTextSeeAgain"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintTop_toTopOf="@id/tvTitleUserName" />
<!--
    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:background="@drawable/shape_background_light_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCorrectAnswersNumber"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleQuizzesCompleted"/>
-->

    <TextView
        android:id="@+id/tvCorrectAnswersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:text="1"

        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvIncorrectAnswersNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTextSeeAgain" />

    <TextView
        android:id="@+id/tvTitleCorrectAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct Answers"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@id/tvCorrectAnswersNumber"
        app:layout_constraintStart_toStartOf="@id/tvCorrectAnswersNumber"
        app:layout_constraintTop_toBottomOf="@id/tvCorrectAnswersNumber" />


    <View
        android:id="@+id/line1"
        android:layout_width="@dimen/_1dp"
        android:layout_height="@dimen/_0dp"
        android:background="#BDBDBD"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleCorrectAnswers"
        app:layout_constraintEnd_toStartOf="@id/tvTitleInCorrectAnswers"
        app:layout_constraintStart_toEndOf="@id/tvTitleCorrectAnswers"
        app:layout_constraintTop_toTopOf="@id/tvCorrectAnswersNumber" />


    <TextView
        android:id="@+id/tvIncorrectAnswersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="@dimen/_3dp"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tvSkipAnswersNumber"
        app:layout_constraintStart_toEndOf="@id/tvCorrectAnswersNumber"
        app:layout_constraintTop_toTopOf="@id/tvCorrectAnswersNumber" />


    <TextView
        android:id="@+id/tvTitleInCorrectAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect Answers"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@id/tvIncorrectAnswersNumber"
        app:layout_constraintStart_toStartOf="@id/tvIncorrectAnswersNumber"
        app:layout_constraintTop_toBottomOf="@id/tvCorrectAnswersNumber"
        app:layout_constraintTop_toTopOf="@id/tvTitleCorrectAnswers" />

    <View
        android:layout_width="@dimen/_1dp"
        android:layout_height="@dimen/_0dp"
        android:background="#BDBDBD"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleCorrectAnswers"
        app:layout_constraintEnd_toStartOf="@id/tvTitleSkipAnswers"
        app:layout_constraintStart_toEndOf="@id/tvTitleInCorrectAnswers"
        app:layout_constraintTop_toTopOf="@id/line1" />

    <TextView
        android:id="@+id/tvSkipAnswersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvIncorrectAnswersNumber"
        app:layout_constraintTop_toTopOf="@id/tvCorrectAnswersNumber" />


    <TextView
        android:id="@+id/tvTitleSkipAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skipped Answers"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@id/tvSkipAnswersNumber"
        app:layout_constraintStart_toStartOf="@id/tvSkipAnswersNumber"
        app:layout_constraintTop_toBottomOf="@id/tvCorrectAnswersNumber"
        app:layout_constraintTop_toTopOf="@id/tvTitleCorrectAnswers" />


    <TextView
        android:id="@+id/tvCompletedQuizzesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvPointNumber"
        app:layout_constraintStart_toStartOf="@id/contentStart"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCorrectAnswers" />


    <TextView
        android:id="@+id/tvTitleQuizzesCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quizzes completed"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tvCompletedQuizzesNumber"
        app:layout_constraintStart_toStartOf="@id/tvCompletedQuizzesNumber"
        app:layout_constraintTop_toBottomOf="@id/tvCompletedQuizzesNumber" />


    <TextView
        android:id="@+id/tvPointNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintStart_toEndOf="@id/tvCompletedQuizzesNumber"
        app:layout_constraintTop_toTopOf="@id/tvCompletedQuizzesNumber" />

    <TextView
        android:id="@+id/tvTitlePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tvPointNumber"
        app:layout_constraintStart_toStartOf="@id/tvPointNumber"
        app:layout_constraintTop_toBottomOf="@id/tvPointNumber" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleQuizzesCompleted"
        app:layout_constraintStart_toStartOf="@id/contentStart"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>