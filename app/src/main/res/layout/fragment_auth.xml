<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor"
    tools:context=".ui.auth.fragments.AuthFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentStart"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentEnd"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_32dp" />


    <ImageView
        android:id="@+id/ic_inquiry_pro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:minWidth="@dimen/_200dp"
        android:minHeight="@dimen/_200dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/ic_inquiry_with_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintStart_toStartOf="@id/contentStart"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvWelcomeDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_horizontal"
        android:maxLines="3"
        android:minLines="3"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="38dp"
        android:text="@string/welcome_description"
        android:textColor="#5c6c7b"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintStart_toStartOf="@id/contentStart"
        app:layout_constraintTop_toBottomOf="@+id/ic_inquiry_pro" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:background="@drawable/shape_stroke_rounded_purple_back_white"
        style="@style/ButtonStyle"
        android:text="@string/login"
        android:textColor="#7b27db"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/contentStart" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_32dp"
        android:background="@drawable/shape_rounded_purple"
        style="@style/ButtonStyle"
        android:text="@string/register"
        android:textColor="#ffffff"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/contentEnd"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/contentStart" />


</androidx.constraintlayout.widget.ConstraintLayout>