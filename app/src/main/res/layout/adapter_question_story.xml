<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutQuestionStory">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvTitleCategoryName"
            android:text="Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_5dp"/>

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tvTitleCategoryName"
            app:layout_constraintTop_toTopOf="@id/tvTitleCategoryName"
            app:layout_constraintBottom_toBottomOf="@id/tvTitleCategoryName"/>


        <TextView
            android:id="@+id/tvTitlePartName"
            android:text="Part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitleCategoryName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_5dp"/>

        <TextView
            android:id="@+id/tvPartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tvTitlePartName"
            app:layout_constraintTop_toTopOf="@id/tvTitlePartName"
            app:layout_constraintBottom_toBottomOf="@id/tvTitlePartName"/>



        <TextView
            android:id="@+id/tvQuestionText"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitlePartName" />

        <TextView
            android:id="@+id/tvTitleCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct"
            android:layout_marginStart="@dimen/_5dp"
            android:textSize="@dimen/_18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQuestionText" />

        <TextView
            android:id="@+id/tvResultCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTitleCorrect"
            app:layout_constraintStart_toEndOf="@id/tvTitleCorrect"
            app:layout_constraintTop_toTopOf="@id/tvTitleCorrect" />

        <TextView
            android:id="@+id/tvTitleInCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:text="InCorrect"
            android:textSize="@dimen/_18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleCorrect" />

        <TextView
            android:id="@+id/tvResultInCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvTitleInCorrect"
            app:layout_constraintStart_toEndOf="@id/tvTitleInCorrect"
            app:layout_constraintTop_toTopOf="@id/tvTitleInCorrect" />

        <TextView
            android:id="@+id/tvLocalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>