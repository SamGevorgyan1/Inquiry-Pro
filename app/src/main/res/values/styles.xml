<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="socialButtonStyle">
        <item name="android:background">@drawable/shape_rounded_white</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_8dp</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:background">@drawable/shape_stroke_rounded_light_purple</item>
        <item name="android:backdropColor" tools:targetApi="tiramisu">@color/editTextColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="EditTextPasswordStyle" parent="BaseEditTextStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextEmailAddress" parent="BaseEditTextStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextFullName" parent="BaseEditTextStyle">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:background">@color/purple</item>
        <item name="android:layout_marginStart">@dimen/_3dp</item>
        <item name="android:layout_marginEnd">@dimen/_3dp</item>
    </style>



                 <!--Button style-->
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>



    <style name="SplashTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_purple</item>
    </style>


    <dimen name="_10dp">10dp</dimen>
</resources>